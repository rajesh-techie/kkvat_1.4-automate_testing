# KKVat Scheduled Report Executor Environment Configuration
# Copy this file to .env in the scripts directory and update values

# API Configuration
API_BASE_URL="http://localhost:8080/api"
API_TOKEN="your_jwt_token_here"

# Email Configuration (optional)
SEND_EMAIL=false
SMTP_FROM="noreply@kkvat.local"

# Logging Configuration
LOG_DIR="/var/log/kkvat"
LOG_LEVEL="INFO"  # DEBUG, INFO, WARN, ERROR

# Timeout Configuration (in seconds)
CURL_TIMEOUT=30
MAX_RETRIES=3
RETRY_DELAY=5
